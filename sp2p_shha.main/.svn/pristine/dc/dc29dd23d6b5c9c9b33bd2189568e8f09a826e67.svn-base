			<li class="ne_en5">保障方式</li>
		</ul>
		<div id="financial_bid">
		</div>
	</div>
</div>
<script>
	function getQueryString(name) {
		var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
		var r = window.location.search.substr(1).match(reg);
		if (r != null) return unescape(r[2]);
		return null;
	}
	
	require([ 'front' ], function(front) {

		require([ 'html5', 'excanvas', 'jquery.easy-pie-chart' ], function() {
			$('.percentage-light').easyPieChart({
				trackColor : '#f1f1f1',
				scaleColor : false,
				lineCap : 'butt',
				lineWidth : 5,
				animate : 1000
			});

		});
		oClick($('.ne_in_list1>dl>dd'));
        oClick($('.ne_in_list2>dl>dd'));
        oClick($('.ne_in_list3>dl>dd'));
        function oClick(om1){
            om1.click(function(ev){
                ev = ev || window.event;
                om1.find('span').removeClass('ne-radio1');
                $(this).find('span').addClass('ne-radio1');
                ev.stopPropagation();
            })
        };
        oSection($('.ne_invest_vip .ne_me'),"vip");
        oSection($('.ne_invest_month .ne_me'),"period");
        oSection($('.ne_invest_day .ne_me'),"time");
        function oSection(os1 ,key){
       
            os1.click(function(ev){
                ev = ev || window.event;
                if($(this).attr('data-v') == 'false'){
                    $('.ne_select .ne_me_son').hide();
                    $(this).parent('.ne_select').find('.ne_me_son').show();
                    $(this).attr('data-f','true');
                }else{
                    $('.ne_select .ne_me_son').hide();
                    $(this).attr('data-f','false');
                }
                ev.stopPropagation();
            });
            os1.parent('.ne_select').find('.ne_me_son li').click(function(ev){
                ev = ev || window.event;
                os1.html($(this).html());
                  chooseCondition(key,$(this).attr("data-v"));
                $(this).parent('.ne_me_son').hide();
                os1.attr('data-f','false');
                ev.stopPropagation();
            });
            $(document).click(function(){
                $('.ne_select .ne_me_son').hide();
                os1.attr('data-f','false');
            });
        }
	
    $(function(){
        //标2左边栏切换
        $(".f-left2-ul li").click(function(){
            $(".f-left2-ul li").removeClass("f-on");
            $(this).addClass("f-on");
        })
        //导航切换
        $(".f-wylc-nav1").click(function(){
            $(".f-wylc-nav1").removeClass("f-on");
            $(this).addClass("f-on");
        })
        //筛选1切换
        $(".ne_in_list3 dd").click(function(){
            $(".ne_in_list3 span").removeClass("ne-radio1");
            $(this).find("span").addClass("ne-radio1");
        })
        //筛选2切换
        $(".f-sx2 a").click(function(){
            //判断点击的是否为选中的a
            if($(this).hasClass("f-on")){
            	$(this).toggleClass("f-again");//再次点击改变升降序
            }
            $(".f-sx2 a").removeClass("f-on");//移除选中的a
            $(this).addClass("f-on");//为当前a添加选中
            if($(this).hasClass("f-again")){
            	$("#orderValue").val(1);
            }else{
            	$("#orderValue").val(0);
            }
            var _value = $(this).attr("_value");
            chooseCondition("orderType",_value);
        })
        var webType = getQueryString("webType");
        if(webType){
        	chooseCondition('webType',webType);
        	$('.ne_in_list1  dd  span').removeClass('ne-radio1');
        	switch(webType){
        	case "1":
        		$('.ne_in_list1  dd  span').eq(1).addClass("ne-radio1");
        		break;
        	case "2":
        		$('.ne_in_list1  dd  span').eq(2).addClass("ne-radio1");
        	    break;
        	case "3":
        		$('.ne_in_list1  dd  span').eq(3).addClass("ne-radio1");
        		break; 
       		case "4":
       			$('.ne_in_list1  dd  span').eq(4).addClass("ne-radio1");
       			break;  
        	default :
        		$('.ne_in_list1  dd  span').eq(0).addClass("ne-radio1");
        		break; 		
        	}
  
        }else{
        		showPage(1);
        }
        
    })
});

function chooseCondition(key,value){
	$("#"+key).val(value);
	showPage(1);
}

function showPage(currPage) {
	$.ajax({
		url : "@{front.invest.InvestCtrl.showBidsPre()}",
		type : "GET",
		data : {
			"currPage" : currPage,
			"productId" : $("#productId").val(),
			"status" : $("#status").val(),
			"orderType" : $("#orderType").val(),
			"orderValue" : $("#orderValue").val(),
			"guaranteModeId" : $("#guaranteModeId").val(),
			"webType" : $("#webType").val(),
			"period" : $("#period").val(),
			"time" : $("#time").val(),
			"vip" : $("#vip").val()
		},
		success : function(data){
			$("#financial_bid").html(data);
		}
	});
}

</script>
