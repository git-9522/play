#{extends 'common/wechatMain.html' /}

<div class="center">
    <div class="bill">
        <ul class="bill-uls">
            <li class="flex">
                <div>账单编号</div>
                <div class="flex-1 tr"> ${bill?.billInvestNo}</div>
            </li>
            <li class="flex">
                <div>期数 </div>
                <div class="flex-1 tr">${bill?.period}/${bill?.totalPeriod}</div>
            </li>
            <li class="flex">
                <div>应收本息  </div>
                <div class="flex-1 tr assistant"> ${(bill?.receiveCorpus+bill?.receiveInterest)?.format(common.constants.Constants.FINANCE_FORMATE_NORMAL)}元</div>
            </li>
            <li class="flex">
                <div>本金  </div>
                <div class="flex-1 tr assistant"> ${bill?.receiveCorpus?.format(common.constants.Constants.FINANCE_FORMATE_NORMAL)}元</div>
            </li>
            <li class="flex">
                <div>利息  </div>
                <div class="flex-1 tr assistant"> ${bill?.receiveInterest?.format(common.constants.Constants.FINANCE_FORMATE_NORMAL)}元</div>
            </li>
            <li class="flex">
                <div>服务费  </div>
                <div class="flex-1 tr">  ${bill?.loanFee?.format(common.constants.Constants.FINANCE_FORMATE_NORMAL)}元</div>
            </li>
            <li class="flex">
                <div>预计到账   </div>
                <div class="flex-1 tr">${bill?.principalInterest?.format(common.constants.Constants.FINANCE_FORMATE_NORMAL)}元</div>
            </li>
            <li class="flex">
                <div>到期时间   </div>
                <div class="flex-1 tr">${bill?.receiveTime?.format(common.constants.Constants.DATE_FORMATE)}</div>
            </li>
            <li class="flex">
                <div>状态   </div>
                <div class="flex-1 tr">${bill?.statusStr}</div>
            </li>
        </ul>
    </div>
</div>
         
