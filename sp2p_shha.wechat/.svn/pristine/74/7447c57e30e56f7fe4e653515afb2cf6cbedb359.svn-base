.dialog-bg {
    position: fixed;
    left: 0;
    top: 0;
    min-width: 1200px;
    width: 100%;
    height: 100%;
    z-index: 9999;
}
.dialog-bg {
    width100%;
    height: 100%;
    position: fixed;
    background: #000;
    opacity: 0.3;
}
.dialog-cont {
    width: 7rem!important;
    height: 4rem;
    position: fixed;
    top: 30%!important;
    margin-left: -3.5rem;
    left: 50%!important;
    background: #fff;
    border-radius: 5px;
    z-index: 999999;
}
.dialog-head>span {
    display: block;
    width: 100%;
    text-indent: 2em;
    height: 0.8rem;
    line-height: 0.8rem;
    border-bottom: 1px solid #eaeaea;
    font-size: 0.2rem;
}
.alertmsg {
    margin-top: 1.8rem;
    text-align: center;
}
.alerthandle>input {
    display: block;
    width: 1.5rem;
    height: 0.6rem;
    text-align: center;
    margin: 0.4rem auto 0;
    line-height: 0.6rem;
    border-radius: 4px;
}