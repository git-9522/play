html,body {
    width: 100%;
    overflow-x: hidden;
}
.huodong2_bg1 {
    width: 100%;
    height: 1390px;
    background: url(../images/huodong2/huodong2_bg1.jpg) no-repeat center;
}
.huodong2_bg2 {
   width: 100%;
    height: 1536px;
    background: url(../images/huodong2/huodong2_bg2.jpg) no-repeat center;
    position: relative;
}
.huodong2_bg2 .huodong2_font {
    position: absolute;
    left: 50%;
    margin-left: -580px;
    width: 1160px;
    color: #802e22;
}
.hd_font1 {
    height: 225px;
    top: 128px;
    background: url(../images/huodong2/huodong2_font1.png) no-repeat center;
    text-align: center;
    line-height: 225px;
    font-size: 26px;
}
.hd_font2 {
    height: 600px;
    top: 516px;
    background: url(../images/huodong2/huodong2_font2.png) no-repeat center;
    font-size: 26px;
}
.hd_font2>h3 {
    margin-top: 65px;
    margin-left: 65px;
}
.hd_font2>p {
    width: 740px;
    margin-left: 200px;
    margin-top: 20px;
    line-height: 35px;
}
.hd_font2>span {
    display: block;
    margin-top: 65px;
    margin-left: 65px;
    line-height: 40px;
    color: #fc2a34;
}