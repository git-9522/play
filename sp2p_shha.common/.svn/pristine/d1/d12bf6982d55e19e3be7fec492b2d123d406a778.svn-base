.hongbao{
    margin:20px 174px;
    overflow: hidden;
}
.hb-left{
    width: 306px;
    height: 376px;
    box-sizing: border-box;
    float: left;
    background: url("../images/hongbao.png") no-repeat center;
    position: relative;
}
.hb-right{
    width: 306px;
    height: 376px;
    box-sizing: border-box;
    float: left;
    background: url("../images/hongbao.png") no-repeat center;
    margin-left:240px;
    position: relative;
}
.area{
    position: absolute;
    bottom: 90px;
    left: 90px;
}
.area p{
    font-size: 28px;
    color: #ffffff;
}
.hb-btn{
    display: block;
    width:300px;
    height: 60px;
    line-height: 60px;
    text-align: center;
