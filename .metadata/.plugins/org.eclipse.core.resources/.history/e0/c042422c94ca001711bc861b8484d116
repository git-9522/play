<script type="text/javascript">
function expres(){
	$.ajax({
		url:"@{wechat.front.ActivityCtrl.receiveExpGoldPre(common.enums.Client.WECHAT.code)}",
		type:"GET",
		success:function(data){
			if(data.code==-1){
				location.href="@{wechat.front.LoginAndRegisteCtrl.loginPre()}"
			}else{
				 $("#invset_cont2").html(data.msg)
				 $("#mymodal2").modal("toggle");
			}
		}
	})
}

</script>
