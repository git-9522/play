    <script type="text/javascript">
    	$(function(){
    		$(".q-hbulnew li").click(function(){
				$(".q-hbulnew li").removeClass("q-on");
		        $(this).addClass("q-on");
		        var index = $(this).index();
				$(".detail").not(index).hide();
				$(".detail").eq(index).show();		
			});
    	});
    </script>
