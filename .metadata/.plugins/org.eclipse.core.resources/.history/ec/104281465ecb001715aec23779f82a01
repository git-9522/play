<script type="text/javascript" src="/public/wechat/newedition/js/jquery-1.8.3.min.js"></script>
<script type="text/javascript">

$(function(){
	var recommendCode=getQueryString("recommendCode");
	 $("a").removeAttr("href").click(function(){ 
			if(recommendCode){
				window.location.href="/wx/loginAndRegiste/register.html?recommendCode="+recommendCode;
			}else{
				window.location.href="/wx/loginAndRegiste/register.html";
			}
		});
});


function getQueryString(name) {
		var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
		var r = window.location.search.substr(1).match(reg);
		if (r != null) return unescape(r[2]);
		return null;
	}
</script>
